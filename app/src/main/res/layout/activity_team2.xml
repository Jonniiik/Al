<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/in_paft1"
    android:orientation="vertical"
    tools:context=".ActivityTeam2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/dogTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/team_dog" />


        <ImageButton
            android:id="@+id/catTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/team_cat" />


        <ImageButton
            android:id="@+id/birdsTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/team_birds" />


        <ImageButton
            android:id="@+id/squirrelTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/team_squirrel" />


        <ImageButton
            android:id="@+id/haresTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/team_hares" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/button_start_game"
            android:backgroundTint="@android:color/holo_blue_light"
            android:fontFamily="casual"
            android:text="Setting"
            android:textColor="?android:attr/textColorSecondary"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>